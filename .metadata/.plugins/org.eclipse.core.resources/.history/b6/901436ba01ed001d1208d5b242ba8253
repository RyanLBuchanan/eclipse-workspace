package control_flow;

public class Loops {

	public static void main(String[] args) {
		
		int counter = 0;
		
		while (counter < 10) {
			System.out.println("Chapel is a goddess!");
			counter++;

			System.out.println("The counter is at {counter}");
			// Terminating loop early
			break;
		}
	}
}
