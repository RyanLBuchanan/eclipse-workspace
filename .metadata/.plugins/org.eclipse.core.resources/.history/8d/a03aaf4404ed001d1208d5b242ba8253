package control_flow;

public class Loops {

	public static void main(String[] args) {
		
		String str = "We have a large inventory of Cyber Goddesses "
				+ "the category:Chapel and the slightly hotter " 
				+ "category:Major.";
		
		printCategories(str);
		
//		int counter = 0;
